<!DOCTYPE html>
<html>
<head>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js">
</script>
<script type="text/javascript">

var i=0;
$(document).ready(function () 
{
$("#but1").click(function () 
   {
	
      while (i<6)
          {
              i++;
              $("#div1").fadeIn();
              $("#div2").fadeIn();
              $("#div2").delay(1000).fadeOut(2000);
           }
   });
$("#but2").click(function () 
   {
                $("#div1").fadeIn();                
                $("#div2").stop($("#but1").click());
                $("#div2").hide();
                $("#div2").fadeIn();
   });
});
</script>
</head>
